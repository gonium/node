        <div class="span12">
          <div class="tabbable">
            <ul class="nav nav-tabs">
              <li class="active"><a href="#dash" data-toggle="tab">Dashboard</a></li>
              <li><a href="#sensors" data-toggle="tab">Sensors</a></li>
              <li><a href="#actors" data-toggle="tab">Actors</a></li>
            </ul>
          </div>

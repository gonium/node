              <div class="row-fluid">
                <div class="span3">
                  <p>Last update: <div id="timestamp">n/a</div></p>
                </div>
                <div class="span9">

                  <% for (var i=0; i < sensorlist.length; i++) { 
                  current=sensorlist[i];
                  %>
